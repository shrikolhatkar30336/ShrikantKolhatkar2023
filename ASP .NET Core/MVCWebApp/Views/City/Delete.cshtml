@model MVCWebApp.Models.Cities

<h2>Delete City</h2>

<h3>Are you sure you want to delete this city?</h3>
<div>
    <h4>City Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            City Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
    </dl>
</div>
<form asp-action="Delete" asp-route-id="@Model.CityId">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index">Cancel</a>
</form>

